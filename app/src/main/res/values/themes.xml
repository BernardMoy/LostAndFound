<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LostAndFound" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColorVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/backgroundColor</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- For cropping the profile icon into a circle -->
    <style name="circularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!-- For text views -->
    <!-- Contents -->
    <style name="blackContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="grayContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="whiteContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="errorContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/error_dark</item>
    </style>

    <style name="grayBoldContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blackBoldContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="primaryVariantBoldContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/primaryColorVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="whiteBoldContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Titles -->
    <style name="blackTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="grayTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="whiteTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Headers -->
    <style name="blackBoldHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="whiteHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- For textboxes -->
    <style name="action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/content_margin</item>
        <item name="android:drawableEnd"> @drawable/right_arrow_icon </item>
        <item name="drawableTint">@color/gray</item>
    </style>

    <style name="inputField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/title_font_size</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:background">@drawable/background_light_gray_selector</item>
        <item name="android:textSize">@dimen/content_font_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/content_margin</item>
        <item name="android:padding">@dimen/content_margin</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:autofillHints">text</item>
    </style>


    <!-- For buttons -->
    <style name="colorButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:padding">@dimen/content_margin</item>
        <item name="android:paddingStart">@dimen/header_margin</item>
        <item name="android:paddingEnd">@dimen/header_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="whiteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:padding">@dimen/content_margin</item>
        <item name="android:paddingStart">@dimen/header_margin</item>
        <item name="android:paddingEnd">@dimen/header_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="imageButton">
        <item name="android:layout_width">@dimen/image_button_size</item>
        <item name="android:layout_height">@dimen/image_button_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>