<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/title_margin"
    android:layout_marginEnd="@dimen/title_margin">

    <ImageView
        android:id="@+id/profile_user_name"
        android:layout_width="@dimen/profile_image_size_small"
        android:layout_height="@dimen/profile_image_size_small"
        android:src="@drawable/person_icon"
        android:contentDescription="Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/gray" />

    <TextView
        android:id="@+id/profile_first_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name"
        android:textSize="@dimen/content_font_size"
        android:textColor="@color/gray"
        android:layout_marginStart="@dimen/title_margin"
        android:layout_marginTop="@dimen/content_margin_half"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profile_first_name"
        app:layout_constraintStart_toEndOf="@id/profile_user_name" />

    <TextView
        android:id="@+id/profile_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_font_size"
        android:text="Bernard"
        android:layout_marginTop="@dimen/content_margin_half"
        android:layout_marginBottom="@dimen/content_margin_half"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/title_margin"
        app:layout_constraintTop_toBottomOf="@id/profile_first_name_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_user_name" />

    <ImageButton
        android:id="@+id/edit_first_name_button"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:src="@drawable/edit_icon"
        android:background="@android:color/transparent"
        app:tint = "@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>