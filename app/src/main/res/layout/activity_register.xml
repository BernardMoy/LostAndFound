<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backgroundColor"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation= "0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:background="@android:color/transparent"
                android:src="@drawable/left_arrow_icon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/content_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/onBackground" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <LinearLayout
            android:id="@+id/main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background_white"
            android:layout_marginTop="@dimen/title_margin"
            android:layout_marginStart="@dimen/title_margin"
            android:layout_marginEnd="@dimen/title_margin"
            android:padding="@dimen/title_margin"
            android:paddingStart="@dimen/header_margin"
            android:paddingEnd="@dimen/header_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/header_font_size"
                android:layout_marginTop="@dimen/content_margin"
                />

            <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_description"
                android:textColor="@color/gray"
                android:textSize="@dimen/content_font_size"
                android:layout_marginTop="@dimen/content_margin"
                android:layout_marginBottom="@dimen/content_margin"
                />

            <EditText
                android:id="@+id/register_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/title_font_size"
                android:drawableStart="@drawable/person_icon"
                android:drawableTint="@color/gray"
                android:background="@drawable/item_background_light_gray"
                android:textSize="@dimen/content_font_size"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:padding="@dimen/content_margin"
                android:autofillHints="text"
                android:hint="First name"
                android:textColorHint="@color/gray"

                android:drawablePadding="@dimen/content_margin"
                android:layout_marginTop="@dimen/content_margin_half"
                android:layout_marginBottom="@dimen/content_margin_half"/>

            <EditText
                android:id="@+id/register_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/title_font_size"
                android:drawableStart="@drawable/person_icon"
                android:drawableTint="@color/gray"
                android:background="@drawable/item_background_light_gray"
                android:textSize="@dimen/content_font_size"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:padding="@dimen/content_margin"
                android:autofillHints="text"
                android:hint="Last name"
                android:textColorHint="@color/gray"

                android:drawablePadding="@dimen/content_margin"
                android:layout_marginTop="@dimen/content_margin_half"
                android:layout_marginBottom="@dimen/content_margin_half"/>

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/title_font_size"
                android:drawableStart="@drawable/email_icon"
                android:drawableTint="@color/gray"
                android:background="@drawable/item_background_light_gray"
                android:textSize="@dimen/content_font_size"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:padding="@dimen/content_margin"
                android:autofillHints="emailAddress"
                android:hint="Email address (@warwick.ac.uk)"
                android:textColorHint="@color/gray"

                android:drawablePadding="@dimen/content_margin"
                android:layout_marginTop="@dimen/content_margin_half"
                android:layout_marginBottom="@dimen/content_margin_half"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:boxBackgroundMode = "none"
                android:layout_marginTop="@dimen/content_margin_half"
                android:layout_marginBottom="@dimen/content_margin_half"
                app:hintEnabled="false"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/title_font_size"
                    android:drawableStart="@drawable/lock_icon"
                    android:drawableTint="@color/gray"
                    android:background="@drawable/item_background_light_gray"
                    android:textSize="@dimen/content_font_size"
                    android:textColor="@color/black"
                    android:padding="@dimen/content_margin"
                    android:textColorHint="@color/gray"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:drawablePadding="@dimen/content_margin"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/register_error"
                android:visibility="gone"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background_error"
                android:text="Register error"
                android:textColor="@color/error_dark"
                android:textSize="@dimen/content_font_size"

                android:padding="@dimen/content_margin"
                android:paddingStart="@dimen/title_margin"
                android:paddingEnd="@dimen/title_margin"
                android:layout_marginTop="@dimen/content_margin_half"
                android:layout_marginBottom="@dimen/content_margin_half"
                />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register_button"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:padding="@dimen/content_margin"
                android:paddingStart="@dimen/header_margin"
                android:paddingEnd="@dimen/header_margin"
                android:text="Register"
                android:textSize="@dimen/title_font_size"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_gradient_button"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/content_margin"
                android:layout_marginBottom="@dimen/content_margin" />

        </LinearLayout>
    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>