<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation= "0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/back_button"
                android:src="@drawable/left_arrow_icon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/content_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/white"
                android:contentDescription="back"
                style="@style/imageButton"/>

            <TextView
                android:text="My profile"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/whiteTitle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top aligned scrollview, allowing scroll when screen is too short -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Top background color area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/button_gradient_top">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/title_margin"
                        android:layout_marginBottom="@dimen/content_margin"
                        android:layout_gravity="center_horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profile_image"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/profile_image_size_large"
                            android:layout_height="@dimen/profile_image_size_large"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_icon"
                            app:shapeAppearanceOverlay="@style/circularImageView"
                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/change_profile_image"
                            android:layout_width="@dimen/image_button_size"
                            android:layout_height="@dimen/image_button_size"
                            android:src="@drawable/add_icon"
                            app:fabCustomSize="@dimen/image_button_size"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Change profile image"
                            app:backgroundTint="@color/white"
                            app:layout_constraintBottom_toTopOf="@id/nav_view"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:srcCompat="@drawable/add_icon"
                            app:tint = "@color/secondaryColorVariant"
                            android:layout_gravity="bottom|end" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/profile_display_name"
                        android:layout_gravity="center_horizontal"
                        android:text="Display name"
                        android:layout_marginBottom="@dimen/content_margin"
                        style="@style/whiteHeader"
                        />

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_gravity="center_horizontal"
                        android:text="u0000000@warwick.ac.uk"
                        android:layout_marginBottom="@dimen/content_margin"
                        style="@style/whiteContent"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/edit_profile"
                        android:layout_marginBottom="@dimen/title_margin"
                        android:text="Edit profile"
                        android:textSize="@dimen/content_font_size"
                        style="@style/whiteButton" />


                </LinearLayout>

                <!-- Bottom actions and displays area -->
                <!-- For account details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin = "@dimen/content_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account details"
                        android:layout_marginTop="@dimen/content_margin_half"
                        android:layout_marginBottom="@dimen/content_margin_half"
                        style="@style/grayBoldContent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:startIconDrawable="@drawable/person_icon"
                        android:hint="First name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/first_name"
                            android:layout_width="match_parent"
                            android:paddingStart="@dimen/image_button_size"
                            android:paddingEnd="@dimen/image_button_size"
                            android:background="@android:color/transparent"
                            android:text="First name"
                            android:enabled="false"
                            android:inputType="text"
                            style="@style/blackContent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <include layout="@layout/separator_line" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:startIconDrawable="@drawable/person_icon"
                        android:hint="Last name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/last_name"
                            android:layout_width="match_parent"
                            android:paddingStart="@dimen/image_button_size"
                            android:paddingEnd="@dimen/image_button_size"
                            android:background="@android:color/transparent"
                            android:text="Last name"
                            android:enabled="false"
                            android:inputType="text"
                            style="@style/blackContent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <include layout="@layout/separator_line" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:startIconDrawable="@drawable/person_icon"
                        android:hint="Email">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:paddingStart="@dimen/image_button_size"
                            android:paddingEnd="@dimen/image_button_size"
                            android:background="@android:color/transparent"
                            android:text="u0000000@warwick.ac.uk"
                            android:enabled="false"
                            android:inputType="text"
                            style="@style/blackContent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <include layout="@layout/separator_line" />

                    <!-- For actions -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Actions"
                        android:layout_marginTop="@dimen/content_margin"
                        android:layout_marginBottom="@dimen/content_margin_half"
                        style="@style/grayBoldContent" />

                    <TextView
                        android:id="@+id/change_password"
                        android:text="Change password"
                        app:drawableStartCompat="@drawable/lock_icon"
                        android:layout_marginTop="@dimen/content_margin_half"
                        android:layout_marginBottom="@dimen/content_margin_half"
                        android:padding="@dimen/content_margin"
                        style="@style/action"
                        />

                    <TextView
                        android:id="@+id/disable_account"
                        android:text="Disable account"
                        android:textColor="@color/error"
                        app:drawableStartCompat="@drawable/error_icon"
                        android:layout_marginTop="@dimen/content_margin_half"
                        android:layout_marginBottom="@dimen/content_margin_half"
                        android:padding="@dimen/content_margin"
                        style="@style/action"
                        app:drawableTint="@color/error" />

                    <include layout="@layout/separator_line" />

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>